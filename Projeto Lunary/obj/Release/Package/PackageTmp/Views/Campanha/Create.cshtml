@model Projeto_Lunary.Models.Campanhas
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div>
    <form action="/Campanha/Create" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" class="form-control"
                   id="Descricao" name="Descricao"
                   />
        </div>

        <div class="form-group">
            <label for="CAMPRECO">Preço</label>
            <input type="text" class="form-control" step="0.010"
                   id="CAMPRECO" name="CAMPRECO" required
                    />
        </div>

        <div class="form-group">
            <label for="Foto"></label>
            <input type="file" class="form-control"
                   id="Foto" name="Foto" />
        </div>
        <div>
            <p class="text-left">Tamanho Maximo Do Arquivo 4 Mb</p>
        </div>
        <div>
            <a href="/Campanha/Index"> <button type="button" class="btn btn-primary">Voltar</button>  </a>
            <a href="/Campanha/Index"> <button type="submit" class="btn btn-success">Salvar</button>  </a>
        </div>
        <div>

        </div>
    </form>
</div>




