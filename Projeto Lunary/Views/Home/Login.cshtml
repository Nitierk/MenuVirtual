
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<h2>Login</h2>

<html>
<head>
</head>
<body class="backlogin">
    <div class="divlogin">
        <form action="/Home/VerificarLogin">

            <div class="divitems">
                <label>Login: </label>
                <input class="inputLogin" name="login" type="text" required />
            </div>
            <div class="divitems">
                <label>Senha: </label>
                <input class="inputLogin" name="senha" type="password" required />
            </div>
            <div class="divitems">
                <button class="btn btn-success btnLogin" type="submit">Logar</button>
            </div>
        </form>
    </div>
</body>
</html>

