@model Projeto_Lunary.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/Admin/TelaAdmin.css" rel="stylesheet" />

<div class="row gradiente">
    <section id="loginForm">

        @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h2 class="h2">Login</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "msg_Error" })
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", @placeholder = "Email" })

                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "msg_Error" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Senha" })

                </div>
            </div>
            <div class="form-group col-md-offset-2 col-md-10 ">
                @Html.CheckBoxFor(m => m.LembrarMe)
                @Html.LabelFor(m => m.LembrarMe, new { @class = "Lembrame" })
            </div>

            <div class="form-group2">
                <div class="col-md-offset-2 col-md-10">

                    <button type="submit" class="entrar">Entrar</button>

                </div>
            </div>
        }
    </section>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}