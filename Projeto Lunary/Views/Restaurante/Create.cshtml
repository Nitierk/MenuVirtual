@model Projeto_Lunary.Models.Restaurante

@{
    ViewBag.Title = "Create";
}

<h2>Cadastro de Produto</h2>
<div>

    <form action="/Restaurante/Create" enctype="multipart/form-data" method="post">
    
    <div class="form-group">
        <label for="nome">Nome Do Prato</label>
        <input type="text" class="form-control"
               maxlength="100"
               id="nome" name="nome"
               required />
    </div>
    <div class="form-group">
        <label for="preco">Preço</label>
        <input type="number" step="0.010" class="form-control"
               id="preco" name="preco"
               required />
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control"
               id="descricao" name="descricao"
               required />
    </div>
    <div class="form-group">
        <label for="precopromocao">Preço Promoção</label>
        <input type="text" class="form-control"
               id="precopromocao" name="precopromocao"
               required />
    </div>

    <div class="form-group">
        <label for="categoria">Categoria</label>
        <input type="text" class="form-control"
               id="categoria" name="categoria"
               required />
    </div>

    <div class="form-group">
        <label for="arquivo">Imagem</label>
        <input type="file" class="form-control"
               id="imagem" name="imagem" />
    </div>

    <div>
        <a href="/Restaurante/Index"><button type="button" class="btn btn-primary">Voltar</button>  </a>
        <a href="/Restaurante/Index"><button type="submit" class="btn btn-success">Salvar</button>  </a>
    </div>
</form>
</div>


