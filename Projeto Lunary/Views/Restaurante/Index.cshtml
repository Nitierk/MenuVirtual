@model IEnumerable<Projeto_Lunary.Models.Restaurante>
@{
    ViewBag.Title = "Pratos";

}
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.4.1.js"></script>

<h2>Pratos</h2>
<a class="btn btn-success" href="/Restaurante/Create">Novo Prato</a>


<thead>
    <h1>Lunary</h1>
    <p>Cardápio</p>

</thead>

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
            <li class="nav-item">

            </li>
        </ul>
    </div>
</nav>

<div class="dropdown">
    <select class="Filtro_Categorias">

        @foreach (var item in ViewBag.ListCategorias)
        {
            <option value="value">@item.RESTACATEGORIA</option>

        }
    </select>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <img class="img" src="./img/230346.webp" width="232" height="232">
            <h3 class="text-center Pastel">@item.RESTANOME</h3>

            <div class="heart-btn">
                <div class="content">
                    <span class="heart"></span>
                </div>
            </div>

            <script>
                $(document).ready(function () {
                    $('.content').click(function () {
                        $('.content').toggleClass("heart-active")
                        $('.text').toggleClass("heart-active")
                        $('.heart').toggleClass("heart-active")
                    });
                });
            </script>

            <p class="preco">R$ @item.RESTAPRECO</p>
        </div>
    </div>
}


        


      