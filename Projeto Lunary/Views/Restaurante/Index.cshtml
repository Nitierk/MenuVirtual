@model IEnumerable<Projeto_Lunary.Models.Restaurante>
@{
    ViewBag.Title = "Pratos";
}

<h2>Pratos</h2>
<a class="btn btn-success" href="/Restaurante/Create">Novo Prato</a>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Prato</td> 
            <td>Preço</td>
            <td>Descrição</td>
            <td>Preço Promoção</td>
            <td>Categoria</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
               <td>@item.RESTAUID</td>
               <td>@item.RESTANOME</td>
               <td>R$@item.RESTAPRECO</td>
               <td>@item.RESTADESCRICAO</td>
               @if (@item.RESTAPREPROMOCAO != null)
               {
                   <td>
                       R$ @item.RESTAPREPROMOCAO
                   </td>
               }
               else
               {
                   <td> </td>
               }
               <td>@item.RESTACATEGORIA</td>

               <td>
                   <a href="/Restaurante/Editar?id=@item.RESTAUID"><button type="button" class="btn btn-warning">Editar</button></a>
                   <a href="/Restaurante/Exibir?id=@item.RESTAUID"><button type="button" class="btn btn-primary">Exibir</button></a>
                   <a href="/Restaurante/Excluir?id=@item.RESTAUID"><button type="button" class="btn btn-danger">Excluir</button></a>
               </td>
           </tr>
           
        }
    </tbody>
   
</table>

