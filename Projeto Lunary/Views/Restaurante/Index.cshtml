@model IEnumerable<Projeto_Lunary.Models.Restaurante>
@{
    ViewBag.Title = "Pratos";
}
<head>

    <link href="~/Content/Menu/Menu.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="~/Scripts/Menu/FilterCate.js"></script>
</head>

<body>

    <h1 class="titulo">Lunary</h1>
    <p class="subtitulo">Cardápio</p>



    <div class="barraVermelha">.</div>


    <p class="barra">Menu</p>

    <!-- Filtro Categorias -->
    <div class="botao btn-group">

        <div class="dropdown">
            <select onchange="FiltroCategorias()" id="FiltroCategorias" class="btn btn-danger dropdown-toggle">

                @foreach (var item in ViewBag.ListCategorias)
                {
                    <option onchange="FiltroCategorias()" value="@item.RESTACATEGORIA">@item.RESTACATEGORIA</option>

                }
            </select>
        </div>

    </div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    Refeições
                </li>
            </ul>
        </div>
    </nav>



    <!-- Pratos -->
    <div>
        @foreach (var item in Model)
        {
            <div class="row pratos @item.RESTACATEGORIA" data-toggle="modal" data-target="#exampleModal" data-whatever="@item.RESTAUID">
                <div class="col-lg-12">
                    <img class="img" src="~/Content/Menu/img/PratoExemplo.png" width="232" height="232">
                    <h3 class="text-center name">@item.RESTANOME</h3>

                    <div class="heart-btn">
                        <div class="content" id="@item.RESTAUID">
                            <form><span class="heart"></span></form>
                            @*<form><a href="/Menu/Curtida/@item.RESTAUID"><span class="heart"></span></a></form> *@
                        </div>
                    </div>




                    <p class="preco">R$ @item.RESTAPRECO</p>
                </div>
            </div>
        }

    </div>



    <script>

        window.onload = () => {
            document.queryCommandIndeterm
            FiltroCategorias()
        }


        $(document).ready(function () {
            $('.content').click(function () {
                $('.content').toggleClass("heart-active")
                $('.text').toggleClass("heart-active")
                $('.heart').toggleClass("heart-active")
            });
        });
    </script>
</body>




