@model IEnumerable<Projeto_Lunary.Models.Restaurante>
@{
    ViewBag.Title = "Pratos";
    
}

<head>
    <link href="~/Content/Menu/Menu.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/Menu/FilterCate.js"></script>
    <link href="~/Content/Menu/Preloader.css" rel="stylesheet" />
</head>

<body>
    <!-- PRELOADER! -->
    <div id="preloader">
        <div class="inner">

            <div class="bolas">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>

    <!-- CONTENT -->
    <div class="Conteudo">
        <script src="~/Scripts/Menu/ScrollToTop.js"></script>

        <div id="progress">
            <span id="progress-value">&#x1F815;</span>
        </div>
        <h1 class="titulo">Lunary</h1>
        <p class="subtitulo">Cardápio</p>



        <div class="barraVermelha">.</div>


        <p class="barra">Menu</p>



        <!-- Filtro Categorias -->
        <div class="semibotao">
            <div class="botao btn-group">
                <div class="dropdown">

                    <select style="text-transform: uppercase;" onchange="FiltroCategorias()" id="FiltroCategorias" class="btn btn-danger dropdown-toggle">

                        <option onchange="FiltroCategorias()" value='Oferta do Dia'>Oferta do Dia</option>
                        @foreach (var item in ViewBag.ListCategorias)
                        {
                            <option onchange="FiltroCategorias()" value="@item.RESTACATEGORIA">@item.RESTACATEGORIA</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        @{
            var Categorias = ViewBag.ListCategorias as IEnumerable<Projeto_Lunary.Models.Restaurante>;
        }

        <div>

            <div id="Categoria" class="Categoria"></div>

            <div class="semiprogress">
                <div class="progress" style="height: 2px; width: 160px;">
                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>

        </div>





        <!-- Pratos -->
        <div>
            @{
                var imgDefault = "/Content/Menu/img/LogoLunary.png";
            }
            @foreach (var item in Model)
            {

                <!-- Conversão da img-->

                var imgSrc = "";


                if (item.imagem != null)
                {
                    var base64 = Convert.ToBase64String(item.imagem);
                    imgSrc = String.Format("data:image/jpg/gif/png;base64,{0}", base64);

                }
                else
                {
                    imgSrc = imgDefault;
                }

                <!-- Oferta do Dia-->


                string oferta = "";
                if (item.Oferta)
                {
                    oferta = "Oferta do Dia";
                }



                <div class="row pratos @item.RESTACATEGORIA @oferta">
                    <div class="col-lg-12">
                        <div class="img2" id="@item.RESTAUID">
                            <img class="img" src="@imgSrc" width="232" height="232">
                        </div>

                        <h3 class="text-center name">@item.RESTANOME</h3>

                        <!--Btn Coração-->
                        <div class="heart-btn">
                            <div class="content">
                                <form action="" method="post">
                                    @*<button type="submit" class="heart btn" id="Heart-@item.RESTAUID"></button>*@
                                    <span class="heart" id="@item.RESTAUID"></span>
                                </form>


                            </div>
                        </div>
                        <p class="preco">R$ @item.RESTAPRECO.ToString("F")</p>
                    </div>
                </div>

                <!-- Modal Exibir/Detalhes-->
                @*<div class="modal fade" id="PratosDetalhe-@item.RESTAUID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Prato Detalhes</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>


                                </div>
                                <div class="modal-body">

                                    <div class="col-lg-12">
                                        <div class="img2">
                                            <img class="img" src="@imgSrc" width="232" height="232">
                                        </div>

                                        <h3 class="text-center name">@item.RESTANOME</h3>

                                        <p> @item.RESTADESCRICAO</p>
                                        <h3 class="text-center name">R$ @item.RESTAPRECO.ToString("F")</h3>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                </div>
                            </div>
                        </div>
                    </div>*@


            }

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="PratosDetalhes" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                
                <div class="modal-body">
                    <div id="conteudoModal">

                    </div>
                </div>
                
            </div>
        </div>
    </div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $(".img").click(function () {

                var id = $(this.id)

                $("#conteudoModal").load("/Restaurante/Detalhes" + id,
                    function () {
                        $("#PratosDetalhes").modal("show");
                    }
                );
            });

        });
    </script>

    <script src="~/Scripts/Menu/preloader.js"></script>
    <script src="~/Scripts/Menu/bootbox.min.js"></script>
    <script>

        window.onload = () => {
            document.queryCommandIndeterm
            FiltroCategorias()
        }



        $(document).ready(function () {




            //Like
            $('.heart').click(function () {

                var id = (this.id);
                var url = "/Restaurante/ContagemLikes";
                var status;
                let el = document.getElementById(id);
                if (el.classList.contains('heart-active')) {
                    el.classList.remove('heart-active');
                    status = false;
                    $.post(url, { id: id, status: status }, function (data) {

                    });
                }
                else {
                    el.classList.add('heart-active');
                    status = true;
                    $.post(url, { id: id, status: status }, function (data) {

                    });
                }


            });

        });






    </script>
}
</body>




